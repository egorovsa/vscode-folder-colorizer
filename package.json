{
  "name": "folder-colorizer",
  "displayName": "FolderColorizer",
  "description": "The Folder Colorizer extension for Visual Studio Code provides an easy and convenient way to change the color of folders in the file explorer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "folder-colorizer.setColor"
        },
        {
          "command": "folder-colorizer.setBadge"
        },
        {
          "command": "folder-colorizer.clearColorizer"
        }
      ]
    },
    "commands": [
      {
        "command": "folder-colorizer.setColor",
        "title": "Colorize"
      },
      {
        "command": "folder-colorizer.setBadge",
        "title": "Set budge"
      },
      {
        "command": "folder-colorizer.clearColorizer",
        "title": "Clear colorizer"
      }
    ],
    "colors": [
      {
        "id": "foldercolorizer.blue",
        "description": "Blue color.",
        "defaults": {
          "dark": "#7ed7f5",
          "light": "#01bdfb",
          "highContrast": "#7ed7f5",
          "highContrastLight": "#01bdfb"
        }
      },
      {
        "id": "foldercolorizer.red",
        "description": "Red color.",
        "defaults": {
          "dark": "#eb8a8a",
          "light": "#8b0000",
          "highContrast": "#eb8a8a",
          "highContrastLight": "#8b0000"
        }
      },
      {
        "id": "foldercolorizer.green",
        "description": "Green color.",
        "defaults": {
          "dark": "#00ff00",
          "light": "#00ff00",
          "highContrast": "#00ff00",
          "highContrastLight": "#006400"
        }
      },
      {
        "id": "foldercolorizer.yellow",
        "description": "Yellow color.",
        "defaults": {
          "dark": "#ffff00",
          "light": "#ffd700",
          "highContrast": "#ffd700",
          "highContrastLight": "#ffff00"
        }
      },
      {
        "id": "foldercolorizer.orange",
        "description": "Orange color.",
        "defaults": {
          "dark": "#ffa500",
          "light": "#c78202",
          "highContrast": "#ffa500",
          "highContrastLight": "#c78202"
        }
      },
      {
        "id": "foldercolorizer.purple",
