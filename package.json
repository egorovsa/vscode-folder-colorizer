        }
      },
      {
        "id": "foldercolorizer.silver",
        "description": "Silver color.",
        "defaults": {
          "dark": "#d3d3d3",
          "light": "#c0c0c0",
          "highContrast": "#d3d3d3",
          "highContrastLight": "#c0c0c0"
        }
      },
      {
        "id": "foldercolorizer.gold",
        "description": "Gold color.",
        "defaults": {
          "dark": "#fafad2",
