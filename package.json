          "highContrastLight": "#b03060"
        }
      },
      {
        "id": "foldercolorizer.gray",
        "description": "Gray color.",
        "defaults": {
          "dark": "#808080",
          "light": "#c0c0c0",
          "highContrast": "#808080",
          "highContrastLight": "#c0c0c0"
        }
      },
      {
        "id": "foldercolorizer.aqua",
        "description": "Aqua color.",
        "defaults": {
          "dark": "#00ffff",
          "light": "#afeeee",
          "highContrast": "#00ffff",
          "highContrastLight": "#afeeee"
        }
      }
    ],
    "configuration": {
      "title": "FolderColorizer",
      "properties": {
        "folder-colorizer.pathColors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "folderPath": {
                "type": "string"
              },
              "color": {
                "type": "string"
              },
              "badge": {
                "type": "string"
              }
            },
            "required": [
              "color",
              "folderPath"
            ]
          },
          "default": [],
          "description": "Включает возможность Х"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}
