        "defaults": {
          "dark": "#9370db",
          "light": "#9370db",
          "highContrast": "#9370db",
          "highContrastLight": "#800080"
        }
      },
      {
        "id": "foldercolorizer.violet",
        "description": "Violet Color",
        "defaults": {
          "dark": "#ee82ee",
          "light": "#ee82ee",
          "highContrast": "#8b00ff",
          "highContrastLight": "#ee82ee"
        }
      },
      {
        "id": "foldercolorizer.indigo",
        "description": "Indigo color.",
        "defaults": {
          "dark": "#8379c5",
          "light": "#4b0082",
          "highContrast": "#4b0082",
          "highContrastLight": "#6a5acd"
        }
      },
      {
        "id": "foldercolorizer.pink",
        "description": "Pink color.",
        "defaults": {
          "dark": "#ffc0cb",
          "light": "#c71585",
          "highContrast": "#ffc0cb",
          "highContrastLight": "#c71585"
        }
      },
      {
        "id": "foldercolorizer.brown",
        "description": "Brown color.",
        "defaults": {
          "dark": "#d2691e",
